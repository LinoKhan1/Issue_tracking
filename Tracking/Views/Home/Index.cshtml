@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <h5 class="card-title">Open Issues</h5>
                    <p class="card-text display-4">25</p>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a href="#" class="text-white">View Details</a>
                    <span class="badge bg-light text-dark">New</span>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <h5 class="card-title">In Progress</h5>
                    <p class="card-text display-4">15</p>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a href="#" class="text-white">View Details</a>
                    <span class="badge bg-light text-dark">Updated</span>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-dark mb-4">
                <div class="card-body">
                    <h5 class="card-title">Pending Review</h5>
                    <p class="card-text display-4">10</p>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a href="#" class="text-dark">View Details</a>
                    <span class="badge bg-light text-dark">Pending</span>
                </div>
            </div>
        </div>
    </div>
</div>