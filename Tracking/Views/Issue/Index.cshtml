@model IEnumerable<Tracking.Models.Issue>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1 class="display-4">Issue Tracker</h1>
    <form method="get" asp-action="Index" class="form-inline mb-3">
        <input type="text" name="searchString" class="form-control mr-sm-2" placeholder="Search issues..." value="@ViewData["CurrentFilter"]"/>
        <button type="submit" class="btn btn-outline-success">Search</button>
    </form>

    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>

    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Assignment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Priority)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.Status</td>
                    <td>@item.Assignment</td>
                    <td>@item.Priority</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
